{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 120,
  "ignorePatterns": [
    "bun.lock",
    "**/dist/**",
    "**/node_modules/**",
    "**/.vinxi/**",
    "**/routeTree.gen.ts",
    "**/*.d.ts",
    "**/docs/changelog.mdx"
  ],
  "experimentalTailwindcss": {
    "stylesheet": "./packages/web/src/styles/globals.css",
    "attributes": ["class", "className"],
    "functions": ["clsx", "cn"],
    "preserveDuplicates": false,
    "preserveWhitespace": false
  }
}
