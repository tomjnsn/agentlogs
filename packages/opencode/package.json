  "keywords": [
    "ai-coding",
    "opencode",
    "plugin",
    "transcript",
    "vibeinsights"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibeinsights/vibeinsights.git",
    "directory": "packages/opencode"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "src/index.ts",
