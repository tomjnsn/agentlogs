{
  "name": "vibeinsights",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "scripts": {
    "dev": "bun --filter @vibeinsights/web dev",
    "build": "bun --filter @vibeinsights/web build",
    "start": "bun --filter @vibeinsights/web start",
    "cli": "bun --filter @vibeinsights/cli start",
    "db:setup": "bun --filter @vibeinsights/web db:setup",
    "db:generate": "bun --filter @vibeinsights/web db:generate",
    "db:migrate": "bun --filter @vibeinsights/web db:migrate",
    "db:studio": "bun --filter @vibeinsights/web db:studio",
    "test:e2e": "bun --filter @vibeinsights/cli test:e2e",
    "lint": "oxlint --deny-warnings .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "bun run lint && bun run format:check",
    "typecheck": "bun run --workspaces typecheck",
    "plugin:switch-dev": "bash scripts/toggle-plugin-dev.sh",
    "plugin:switch-prod": "bash scripts/toggle-plugin-dev.sh",
    "plugin:status": "bash scripts/check-plugin-status.sh"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/bun": "^1.3.0",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "unenv": "^1.10.0",
    "typescript": "^5.6.2"
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "@prettier/plugin-oxc",
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./packages/web/src/styles/globals.css"
  }
}
